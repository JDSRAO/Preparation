@model Vidly.Models.Movie

<h2>@Model.Name</h2>

<ul>
    <li>Genre : @Model.Genre.Name</li>
    <li>Release Date: @Model.CreatedDateTime.ToString(Vidly.Helpers.Constants.DateFormat) </li>
    <li>Date Added: @Model.AddedDate.ToString(Vidly.Helpers.Constants.DateFormat)</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>
